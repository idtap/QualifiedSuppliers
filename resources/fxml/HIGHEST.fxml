<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import com.esri.arcgisruntime.mapping.view.SceneView?>

<?import javafx.scene.layout.Background?>
<?import javafx.scene.layout.BackgroundFill?>
<?import javafx.scene.paint.Color?>
<?import javafx.geometry.Insets?>
<StackPane fx:controller="controller.HIGHESTController"
           xmlns:fx="http://javafx.com/fxml" stylesheets="/css/style.css">
           
   <!--SDK MapView-->
  <SceneView fx:id="sceneView"/>
	
    <!--Controls-->
  <VBox StackPane.alignment="TOP_LEFT" spacing="5" maxWidth="200" maxHeight="50" styleClass="panel-region">

      <padding>
          <Insets topRightBottomLeft="10"/>
      </padding>
      <background>
          <Background>
              <fills>
                  <BackgroundFill>
                      <fill>
                          <Color opacity="0.3"/>
                      </fill>
                  </BackgroundFill>
              </fills>
          </Background>
      </background>
    
    <Button fx:id="btnGenerate" disable="true" text="Analysis" onAction="#handleGenerateContours" 
       maxWidth="Infinity"/>
    <Button fx:id="btnClear" disable="true" text="Clear Results" onAction="#handleClearResults" maxWidth="Infinity"/>
  </VBox>
  
  <ProgressBar fx:id="progressBar" maxWidth="240.0" progress="-100.0" visible="false"/>
    
</StackPane>

